@{ViewData["Title"] = "Dashboard";}

<!DOCTYPE html>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="wwwroot/css/site.css" />

<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <style>


        .container {
            display: table;
            height: 90%;
            width: 90%;
        }

        div {
            display: table-cell;
            text-align: left;
            width: 50%;
            padding: 2%;
        }

        .left-half {
            background: #aaa;
            width: 70%;
        }

        .right-half {
            background: #bbb;
            width: 30%;
        }
        
    </style>
</head>

<body>
    <h1> Stock Price Dashboard</h1>

    <div class="container">
        <div class="left-half">
            <center><h2>Stock Value (100s): Last 5 Days</h2></center>
            <canvas id="mixed-chart"></canvas>

            <script>
                new Chart(document.getElementById("mixed-chart"), {
                    type: 'bar',
                    data: {
                        labels: ["3/19", "3/20", "3/21", "3/22", "Today"],
                        datasets:
                            [{
                                label: "stock1",
                                type: "line",
                                borderColor: "#8e5ea2",
                                data: [450, 550, 500, 600, 400],
                                fill: false
                            },
                            {
                                label: "stock2",
                                type: "line",
                                borderColor: "#3e95cd",
                                data: [900, 850, 1150, 1200, 1000],
                                fill: false
                            },
                            {
                                label: "stock1",
                                type: "bar",
                                backgroundColor: "rgba(0,0,0,0.3)",
                                data: [450, 550, 500, 600, 400],
                            },
                            {
                                label: "stock2",
                                type: "bar",
                                backgroundColor: "rgba(0,0,0,0.3)",
                                backgroundColorHover: "#3e95cd",
                                data: [900, 850, 1150, 1200, 1000]
                            }]
                    },
                    options:
                    {
                        layout:
                        {
                            padding:
                            {
                                left: 100,
                                right: 100,
                                top: 100,
                                bottom: 100
                            }
                        },
                        legend: { display: true }
                    }
                });
            </script>
        </div>




        <div class="right-half">
            <h2>Historical returns on purchased stocks over the last 5 days</h2>
        </div>
    </div>




</body>
</html>
